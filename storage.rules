rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ===========================
    // Helper Functions
    // ===========================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if file size is under 10MB
    function isUnder10MB() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Check if file is PDF
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    // ===========================
    // News Images
    // ===========================
    
    match /news/{newsId}/{fileName} {
      allow read: if true; // Public can view
      allow write: if isAuthenticated() && isImage() && isUnder10MB();
      allow delete: if isAuthenticated();
    }
    
    // ===========================
    // Scheme Images
    // ===========================
    
    match /schemes/{schemeId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isUnder10MB();
      allow delete: if isAuthenticated();
    }
    
    // ===========================
    // Achievement Images
    // ===========================
    
    match /achievements/{achievementId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isUnder10MB();
      allow delete: if isAuthenticated();
    }
    
    // ===========================
    // Site Assets (Logos, Banners)
    // ===========================
    
    match /site/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isUnder10MB();
      allow delete: if isAuthenticated();
    }
    
    // ===========================
    // PDF Documents
    // ===========================
    
    match /documents/{documentId} {
      allow read: if true;
      allow write: if isAuthenticated() && isPDF() && isUnder10MB();
      allow delete: if isAuthenticated();
    }
    
    // ===========================
    // Member Photos
    // ===========================
    
    match /members/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isUnder10MB();
      allow delete: if isAuthenticated();
    }
    
    // ===========================
    // Gallery Images
    // ===========================
    
    match /gallery/{galleryId}/{fileName} {
      allow read: if true; // Public can view gallery
      allow write: if isAuthenticated() && isImage() && isUnder10MB();
      allow delete: if isAuthenticated();
    }
    
    // ===========================
    // User Uploads (Complaint attachments, etc.)
    // ===========================
    
    match /uploads/{userId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isUnder10MB();
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
